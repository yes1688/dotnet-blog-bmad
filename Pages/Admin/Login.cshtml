@page
@model dotnet_blog_bmad.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "管理員登入";
    Layout = null; // 不使用預設 Layout，使用自訂樣式
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- 登入頁面容器 -->
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <!-- 登入卡片 -->
        <div class="max-w-md w-full space-y-8">
            <!-- 卡片主體 -->
            <div class="bg-white rounded-lg shadow-md px-8 py-10">
                <!-- 標題區域 -->
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        管理員登入
                    </h1>
                    <p class="text-sm text-gray-600">
                        僅限授權管理員登入
                    </p>
                </div>

                <!-- 登入表單 -->
                <form method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <!-- Google 登入按鈕 -->
                    <button type="submit"
                            class="w-full flex items-center justify-center gap-3 px-4 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <!-- Google Icon SVG -->
                        <svg class="w-5 h-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                        使用 Google 帳號登入
                    </button>
                </form>

                <!-- 說明文字 -->
                <div class="mt-6">
                    <p class="text-xs text-center text-gray-500">
                        登入即表示您同意遵守本網站的使用條款
                    </p>
                </div>
            </div>

            <!-- 返回首頁連結 -->
            <div class="text-center">
                <a href="/" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">
                    ← 返回首頁
                </a>
            </div>
        </div>
    </div>
</body>
</html>
