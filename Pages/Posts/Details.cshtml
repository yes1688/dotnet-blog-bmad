@page "{id:int}"
@model dotnet_blog_bmad.Pages.Posts.DetailsModel
@using dotnet_blog_bmad.Helpers
@{
    ViewData["Title"] = Model.Post?.Title ?? "Post Details";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@section Head {
    @if (Model.Post != null)
    {
        var description = SeoHelper.GenerateMetaDescription(Model.Post.MetaDescription, Model.Post.Summary, Model.Post.Content);
        var cleanDescription = SeoHelper.CleanForSeo(description);
        var imageUrl = "https://via.placeholder.com/1200x630"; // TODO: Replace with actual image
        var articleUrl = $"https://yourdomain.com/Posts/Details/{Model.Post.Id}"; // TODO: Replace with actual domain

        <!-- SEO Meta Tags -->
        <meta name="description" content="@cleanDescription" />
        <meta name="keywords" content="@string.Join(", ", Model.Post.Tags.Select(t => t.Name))" />
        <meta name="author" content="部落格作者" />

        <!-- Open Graph Tags -->
        <meta property="og:type" content="article" />
        <meta property="og:title" content="@Model.Post.Title" />
        <meta property="og:description" content="@cleanDescription" />
        <meta property="og:image" content="@imageUrl" />
        <meta property="og:url" content="@articleUrl" />
        <meta property="og:site_name" content="我的部落格" />
        <meta property="article:published_time" content="@Model.Post.PublishedAt?.ToString("yyyy-MM-ddTHH:mm:ssZ")" />
        <meta property="article:modified_time" content="@Model.Post.UpdatedAt.ToString("yyyy-MM-ddTHH:mm:ssZ")" />
        @foreach (var tag in Model.Post.Tags)
        {
            <meta property="article:tag" content="@tag.Name" />
        }

        <!-- Twitter Card Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="@Model.Post.Title" />
        <meta name="twitter:description" content="@cleanDescription" />
        <meta name="twitter:image" content="@imageUrl" />

        <!-- Schema.org JSON-LD -->
        <script type="application/ld+json">
            @Html.Raw(SeoHelper.GenerateArticleSchema(
                Model.Post.Title,
                cleanDescription,
                "部落格作者",
                Model.Post.PublishedAt ?? Model.Post.CreatedAt,
                Model.Post.UpdatedAt,
                imageUrl,
                articleUrl
            ))
        </script>
    }
}

<div class="max-w-4xl mx-auto px-4 py-8">
    @if (Model.Post != null)
    {
        <article>
            <!-- Post Header -->
            <header class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">@Model.Post.Title</h1>

                <!-- Post Metadata -->
                <div class="flex items-center text-gray-600 text-sm space-x-4">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Published: @Model.Post.PublishedAt?.ToString("MMMM dd, yyyy")
                    </span>
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        @Model.Post.ViewCount views
                    </span>
                </div>
            </header>

            <!-- Post Summary -->
            @if (!string.IsNullOrWhiteSpace(Model.Post.Summary))
            {
                <div class="bg-gray-50 border-l-4 border-blue-500 p-4 mb-8">
                    <p class="text-gray-700 italic">@Model.Post.Summary</p>
                </div>
            }

            @* After summary section, add tags *@
            @if (Model.Post.Tags.Any())
            {
                <div class="mb-6">
                    <h3 class="text-sm font-semibold text-gray-700 mb-2">標籤</h3>
                    <div class="flex flex-wrap gap-2">
                        @foreach (var tag in Model.Post.Tags)
                        {
                            <a asp-page="/Index" asp-route-tag="@tag.Slug"
                               class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-@(tag.Color)-100 text-@(tag.Color)-800 hover:bg-@(tag.Color)-200 transition-colors">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                </svg>
                                @tag.Name
                            </a>
                        }
                    </div>
                </div>
            }

            <!-- Post Content -->
            <div class="prose prose-lg max-w-none">
                @Html.Raw(Model.RenderedContent)
            </div>
        </article>

        <!-- Comments Section -->
        <div class="mt-12 pt-8 border-t border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
                評論 (@Model.Comments.Count)
            </h2>

            @if (Model.Comments.Any())
            {
                <div class="space-y-6 mb-8">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="flex items-start justify-between mb-3">
                                <div>
                                    <h3 class="font-semibold text-gray-900">@comment.AuthorName</h3>
                                    <p class="text-sm text-gray-500">
                                        @comment.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                    </p>
                                </div>
                            </div>
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">@comment.Content</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-500 mb-8">目前還沒有評論，成為第一個留言的人吧！</p>
            }
        </div>

        <!-- Comment Form -->
        <div class="mt-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">發表評論</h3>
            <form method="post" class="space-y-4">
                <div>
                    <label asp-for="CommentAuthorName" class="block text-sm font-medium text-gray-700 mb-2">
                        姓名 <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="CommentAuthorName"
                           type="text"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="請輸入您的名稱" />
                    <span asp-validation-for="CommentAuthorName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="CommentAuthorEmail" class="block text-sm font-medium text-gray-700 mb-2">
                        Email <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="CommentAuthorEmail"
                           type="email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="your.email@example.com" />
                    <span asp-validation-for="CommentAuthorEmail" class="text-red-600 text-sm"></span>
                    <p class="mt-1 text-sm text-gray-500">您的 Email 不會被公開顯示</p>
                </div>

                <div>
                    <label asp-for="CommentContent" class="block text-sm font-medium text-gray-700 mb-2">
                        評論內容 <span class="text-red-500">*</span>
                    </label>
                    <textarea asp-for="CommentContent"
                              rows="5"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                              placeholder="寫下您的想法..."></textarea>
                    <span asp-validation-for="CommentContent" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <button type="submit"
                            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        送出評論
                    </button>
                </div>
            </form>
        </div>

        <!-- Back Link -->
        <div class="mt-12 pt-8 border-t border-gray-200">
            <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Home
            </a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
