@page
@model IndexModel
@{
    ViewData["Title"] = "首頁";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20 px-4">
    <div class="container mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
            歡迎來到我的部落格
        </h1>
        <p class="text-xl md:text-2xl text-blue-100">
            分享技術、記錄生活
        </p>
    </div>
</section>

<!-- Latest Posts Section -->
<section class="py-16 px-4 bg-gray-50">
    <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-800">
            最新文章
        </h2>

        <!-- Empty State / Skeleton Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Skeleton Card 1 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden animate-pulse">
                <div class="h-48 bg-gray-300"></div>
                <div class="p-6">
                    <div class="h-4 bg-gray-300 rounded w-3/4 mb-4"></div>
                    <div class="h-3 bg-gray-300 rounded w-full mb-2"></div>
                    <div class="h-3 bg-gray-300 rounded w-5/6"></div>
                </div>
            </div>

            <!-- Skeleton Card 2 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden animate-pulse">
                <div class="h-48 bg-gray-300"></div>
                <div class="p-6">
                    <div class="h-4 bg-gray-300 rounded w-3/4 mb-4"></div>
                    <div class="h-3 bg-gray-300 rounded w-full mb-2"></div>
                    <div class="h-3 bg-gray-300 rounded w-5/6"></div>
                </div>
            </div>

            <!-- Skeleton Card 3 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden animate-pulse">
                <div class="h-48 bg-gray-300"></div>
                <div class="p-6">
                    <div class="h-4 bg-gray-300 rounded w-3/4 mb-4"></div>
                    <div class="h-3 bg-gray-300 rounded w-full mb-2"></div>
                    <div class="h-3 bg-gray-300 rounded w-5/6"></div>
                </div>
            </div>
        </div>

        <!-- Empty State Message -->
        <div class="text-center mt-8">
            <p class="text-gray-600 text-lg">
                目前尚無文章，敬請期待...
            </p>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-16 px-4 bg-white">
    <div class="container mx-auto text-center">
        <h3 class="text-2xl md:text-3xl font-bold mb-6 text-gray-800">
            想看更多內容嗎？
        </h3>
        <a href="/Posts"
           class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            查看所有文章
        </a>
        <p class="text-gray-500 text-sm mt-4">
            即將推出更多精彩內容
        </p>
    </div>
</section>
