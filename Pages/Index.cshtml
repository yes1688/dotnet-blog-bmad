@page
@model dotnet_blog_bmad.Pages.IndexModel
@using dotnet_blog_bmad.Helpers
@{
    ViewData["Title"] = "首頁";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20 px-4">
    <div class="container mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
            歡迎來到我的部落格
        </h1>
        <p class="text-xl md:text-2xl text-blue-100">
            分享技術、記錄生活
        </p>
    </div>
</section>

<!-- 文章列表 -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Search Bar -->
    <div class="mb-8">
        <form method="get" class="max-w-2xl">
            <div class="flex gap-3">
                <div class="relative flex-1">
                    <input type="text"
                           name="search"
                           value="@Model.SearchQuery"
                           placeholder="搜尋文章標題、內容..."
                           class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <button type="submit"
                        class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    搜尋
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <a asp-page="/Index"
                       class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium inline-flex items-center">
                        清除
                    </a>
                }
            </div>
        </form>
    </div>

    <!-- Search Result Indicator -->
    @if (!string.IsNullOrEmpty(Model.SearchQuery))
    {
        <div class="mb-6 flex items-center justify-between bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <span class="text-sm font-medium text-green-900">
                    搜尋「<span class="font-bold">@Model.SearchQuery</span>」找到 @Model.SearchResultCount 篇文章
                </span>
            </div>
            <a asp-page="/Index" class="text-sm text-green-600 hover:text-green-800 font-medium">
                清除搜尋
            </a>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SelectedTag))
    {
        <div class="mb-6 flex items-center justify-between bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <span class="text-sm font-medium text-blue-900">
                    篩選標籤: <span class="font-bold">@Model.SelectedTag</span>
                </span>
            </div>
            <a asp-page="/Index" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                清除篩選
            </a>
        </div>
    }

    @if (Model.Posts.Count == 0)
    {
        <!-- 空狀態 -->
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">目前沒有文章</h3>
            <p class="mt-1 text-sm text-gray-500">請稍後再回來查看</p>
        </div>
    }
    else
    {
        <!-- 文章卡片網格 -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var post in Model.Posts)
            {
                <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    <div class="p-6">
                        <a asp-page="/Posts/Details" asp-route-id="@post.Id">
                            <h2 class="text-2xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
                                @if (!string.IsNullOrEmpty(Model.SearchQuery))
                                {
                                    @Html.Raw(SearchHelper.HighlightSearchTerm(post.Title, Model.SearchQuery))
                                }
                                else
                                {
                                    @post.Title
                                }
                            </h2>
                        </a>

                        <p class="text-gray-600 mb-4 line-clamp-3">
                            @if (!string.IsNullOrEmpty(Model.SearchQuery))
                            {
                                var excerpt = !string.IsNullOrWhiteSpace(post.Summary)
                                    ? post.Summary
                                    : SearchHelper.ExtractTextFromMarkdown(post.Content, 200);
                                @Html.Raw(SearchHelper.HighlightSearchTerm(excerpt, Model.SearchQuery, 200))
                            }
                            else
                            {
                                @(!string.IsNullOrWhiteSpace(post.Summary)
                                    ? post.Summary
                                    : (post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content))
                            }
                        </p>

                        @if (post.Tags.Any())
                        {
                            <div class="flex flex-wrap gap-2 mb-4">
                                @foreach (var tag in post.Tags.Take(5))
                                {
                                    <a asp-page="/Index" asp-route-tag="@tag.Slug"
                                       class="px-2 py-1 text-xs font-medium rounded-full bg-@(tag.Color)-100 text-@(tag.Color)-800 hover:bg-@(tag.Color)-200 transition-colors">
                                        @tag.Name
                                    </a>
                                }
                                @if (post.Tags.Count > 5)
                                {
                                    <span class="px-2 py-1 text-xs font-medium text-gray-500">
                                        +@(post.Tags.Count - 5)
                                    </span>
                                }
                            </div>
                        }

                        <div class="flex items-center justify-between text-sm text-gray-500 mt-4 pt-4 border-t">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                @post.PublishedAt?.ToLocalTime().ToString("yyyy/MM/dd")
                            </div>
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                @post.ViewCount.ToString("N0")
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>

        <!-- 分頁導航 -->
        @if (Model.TotalPages > 1)
        {
            <div class="mt-12 flex justify-center">
                <nav class="flex items-center space-x-2">
                    @if (Model.CurrentPage > 1)
                    {
                        <a asp-page="/Index" asp-route-pageNumber="@(Model.CurrentPage - 1)"
                           class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            上一頁
                        </a>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        @if (i == Model.CurrentPage)
                        {
                            <span class="px-4 py-2 border border-blue-500 rounded-md text-sm font-medium text-white bg-blue-500">
                                @i
                            </span>
                        }
                        else
                        {
                            <a asp-page="/Index" asp-route-pageNumber="@i"
                               class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                                @i
                            </a>
                        }
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a asp-page="/Index" asp-route-pageNumber="@(Model.CurrentPage + 1)"
                           class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            下一頁
                        </a>
                    }
                </nav>
            </div>
        }
    }
</div>
