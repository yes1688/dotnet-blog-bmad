@page
@model dotnet_blog_bmad.Pages.SitemapModel
@{
    Layout = null;
    var domain = "https://yourdomain.com"; // TODO: Replace with actual domain
}<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>@domain/</loc>
        <lastmod>@DateTime.UtcNow.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    @foreach (var post in Model.Posts)
    {
    <url>
        <loc>@domain/Posts/Details/@post.Id</loc>
        <lastmod>@post.UpdatedAt.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    }
</urlset>
